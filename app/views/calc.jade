doctype html
html
  head
    meta(charset='utf-8')
    title Calc
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 Calculator
    if x
      h3 #{x} #{operator} #{y} = #{answer} 
    form(method='post', action='/calc')
      
      input(type='text' name='x' placeholder='x' autofocus=true)
      input(type='text' name='y' placeholder='y')
      select(name='Operator')
        option +
        option -
        option *
        option /
      button Calculate

